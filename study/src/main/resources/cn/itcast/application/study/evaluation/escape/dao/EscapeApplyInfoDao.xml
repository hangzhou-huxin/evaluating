<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.itcast.application.study.evaluation.escape.dao.EscapeApplyInfoDao">
	
	<resultMap type="applyInfo" id="applyInfoMap">
		<id property="id" column="id"/>
		<result property="evId" column="eval_id"/>
		<result property="name" column="name"/>
		<result property="qq" column="qq"/>
		<result property="profession" column="profession"/>
		<result property="schoolYear" column="school_year"/>
		<result property="educationId" column="education"/>
		<result property="ip" column="ip"/>
		<result property="memo" column="memo"/>
		<result property="isProcessed" column="is_processed"/>
		<result property="processInfo" column="process_result"/>
	</resultMap>
	
	<insert id="add" parameterType="applyInfo">
		insert into escape_apply(eval_id,name,qq,profession,school_year,career,education,ip,memo,category_id)
			values(#{evId},#{name},#{qq},#{profession},#{schoolYear},#{career},#{educationId},#{ip},#{memo},#{categoryId})
	</insert>
	
	
	<delete id="delete" parameterType="int">
		delete from escape_apply where id=#{id}
	</delete>
	
	<select id="findByCategoryId" parameterType="cn.itcast.application.study.manage.escape.dto.ApplyInfoQuery" resultMap="applyInfoMap">
	    select id,eval_id,name,qq,profession,career,school_year,education,ip,memo,is_processed,process_result 
	      from escape_apply where category_id=#{categoryId}  limit #{start},#{limit}
	</select>
	
	<update id="saveProcessInfo" parameterType="cn.itcast.application.study.common.dto.ProcessInfoDto">
		update escape_apply set process_result = #{processInfo},is_processed=1 where id=#{id}
	</update>
</mapper>